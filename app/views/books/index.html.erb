<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Show</th>
      <th>Edit</th>  
      <th>Destroy</th>  
    <tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to("Show", book_path(book.id)) %></th>
      <th><%= link_to("Edit", edit_book_path(book.id)) %></th>  
      <th><%= link_to("Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"}) %></th>
    <tr>
<% end %>
  </tbody>
</table>


<h2>New book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>

<% if @book.errors.any? %>
  <p><%= @book.errors.count %> error prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
    </ul>
<% end %>

<h3>Title</h3>

<%= f.text_field :title %>

<h3>Body</h3>

<%= f.text_area :body %>

<br>

<%= f.submit 'Create Book' %>

<% end %>